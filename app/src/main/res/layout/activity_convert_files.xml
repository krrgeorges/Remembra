<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/fchooser_bg"
    android:layout_height="match_parent"
    tools:context=".ConvertFilesActivity">

    <LinearLayout
        android:id="@+id/cfloady"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ProgressBar
            android:id="@+id/cfpb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:progress="1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:textSize="20sp"
            fontPath="fonts/Raleway-Bold.ttf"
            android:textStyle="bold"
            android:text="Converting..."
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cfing"
            android:textColor="#FFFFFF"
            tools:ignore="MissingPrefix" />
    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

        <Button
            android:background="@drawable/fchooser_btn_bg"
            android:layout_margin="2dp"
            android:textColor="#212F3D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cfcancel"/>



</LinearLayout>